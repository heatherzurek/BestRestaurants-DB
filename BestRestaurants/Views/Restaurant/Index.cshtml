@using BestRestaurant.Models;

<h1>My Favorite Restaurants</h1>
<ul>

@if (Model.Count == 0)
{
  <p>There are no restaurants here!</p>
}
@if(Model.Count != 0)
{
  @foreach (Restaurant restaurant in Model)
  {
    <li>Restaurant Name: @restaurant.Name</li>
    <li>Address: <b>@restaurant.Address</b></li>
    <li>Phone Number: @restaurant.PhoneNumber</li>
    <li>Cuisine type: @restaurant.CuisineId</li>
    <br>
  }
}

</ul>
<a href="/">MAIN MENU</a>
<a href="/restaurant/new">ADD RESTAURANT</a>
