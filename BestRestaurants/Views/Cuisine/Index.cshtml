@using BestRestaurant.Models;

<h1>My Favorite Cuisines</h1>
<ul>

@if (Model.Count == 0)
{
  <p>There are no cuisines yet!</p>
}
@if(Model.Count != 0)
{
  @foreach (Cuisine cuisine in Model)
  {
    <li><a href="/restaurant/@cuisine.Id/new">Cuisine Type: @cuisine.Type</a></li>
    <br>
  }
}

</ul>
<a href="/">Back to home</a>
